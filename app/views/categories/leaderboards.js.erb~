<% if @leaderboard_list != ["Select Category First"] %>
$('#leaderboard_vals').html("<%=escape_javascript(render('leaderboards/pick_leaderboard', leaderboard_list: @leaderboard_list))%>");

if($('#pick_leaderboard').val().substring(0,22) == "Create New Leaderboard"){
   $("#create_leaderboard").stop().fadeIn();
 }
else{
   $("#create_leaderboard").hide();
 }

<% else %>
$('#leaderboard_vals').html("<%=escape_javascript(render('leaderboards/pick_leaderboard', leaderboard_list: @leaderboard_list))%>");
$('#pick_leaderboard').attr('disabled', true);
<% end %>
