<script>

	 		$("#pick_leaderboard").change(function(){
	 			
	 			if($(this).val().substring(0,22) == "Create New Leaderboard"){
	 				$("#create_leaderboard").stop().fadeIn();

	 			}else{
	 				$("#create_leaderboard").hide();
	 			}
	 		});

</script>

