<!DOCTYPE html>
<html>

<head>
  <title><%= full_title(yield(:title)) %></title>

  <%= favicon_link_tag 'favicon.png' %>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "application" %>

 <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
 <meta property="og:description" content="A Video Platform for Madison Campus for Video Sharing and Promotion!"/>
 <meta property="og:url" content="http://www.skillmad.com"/>
 <meta property="og:image" content="http://www.skillmad.com/skillmad_graph.gif"/>
 <meta property="og:title" content="Skillmad"/>
 <meta property="og:site_name" content="Skillmad"/>
 <meta property="og:type" content="Website"/>

</head>

<body>

  <%@user = current_user %> 
  <%@leaderpage = true %>

  <%= render 'layouts/header' %>

 <% if signed_in? %>

 <div id="background">

   <%= render 'overlays/upload_info' %>
   <%= render 'overlays/overlay_profile' %>
   <%= render 'overlays/contact_info' %>


  <% end %>
   <%= render 'overlays/overlay_reset' %>
   <%= yield %>

 </div>

  <%= javascript_include_tag "http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js" %>
  <%= javascript_include_tag "jquery.validate"%>
  <%= javascript_include_tag "validations" %>
  <%= javascript_include_tag "jquery.cookie" %>
  <%= javascript_include_tag "customSelect.jquery.min.js" %>
  <%= javascript_include_tag "waypoints.min" %>
  <%= javascript_include_tag "inline"%>
       

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-36183694-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
</body>

</html>
