<!DOCTYPE html>
<html>

<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= favicon_link_tag 'favicon.png' %>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "application" %>
    <meta property="og:url" content="http://www.skillmad.com">
  <link rel="image_src" href="skillmad_og.gif" >

</head>

<body>

  <%@user = current_user %> 
  <%@leaderpage = true %>

  <%= render 'layouts/header' %>

 <% if signed_in? %>

 <div id="background">

   <%= render 'overlays/upload_info' %>
   <%= render 'overlays/overlay_profile' %>
   <%= render 'overlays/contact_info' %>


  <% end %>
   <%= render 'overlays/overlay_reset' %>
   <%= yield %>

 </div>

  <%= javascript_include_tag "http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js" %>
  <%= javascript_include_tag "jquery.validate"%>
  <%= javascript_include_tag "validations" %>
  <%= javascript_include_tag "jquery.cookie" %>
  <%= javascript_include_tag "customSelect.jquery.min.js" %>
  <%= javascript_include_tag "waypoints.min" %>
  <%= javascript_include_tag "inline"%>
       


</body>

</html>
