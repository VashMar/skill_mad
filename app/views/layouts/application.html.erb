<!DOCTYPE html>
<html>

<head>
  
  <title><%= full_title(yield(:title)) %></title>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "application" %>
  </head>
<body>
<%@user = current_user %>
<%@leaderpage = true %>

<%= render 'layouts/header' %>
<div id="background">
<div id="overlay_login" class="istyle">
<div id="form_join">
    
   <h1>Sign up! UW Students Only.</h1>
 
<%= form_for(:user, :url => signup_path, :html => { :id => 'join' } ) do |f| %>


      <%= f.label :name, "Username" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Wisc Email" %> 
      <%= f.text_field :email %>

      <%= f.label :password, "Password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      
   
      <%= f.submit "join", :class => "button" %>
    <% end %>

    </div>
    
    
    </div>
    
    <div id="overlay_upload_info" class="istyle">
    	<h3>having trouble uploading video?</h3>
    	<p>blow me<p>
    </div>
 
  <div id="overlay_profile">
 <h1>Profile Setup</h1>
 <div style="float:left">
 <% if signed_in? %>
 <a href="#"><%= image_tag @user.avatar.url(:large) %></a>
 
<div id="wrapper_file">
<span id="browse2">Browse</span>
<span id="filename2">no file selected</span>

  <%= form_for(@user, :html => { :multipart => true, :id => 'form_pic' }) do |f| %>
   <%= f.file_field :avatar, :id => "form_file"%>
        <%= f.submit "upload", :class => "button" %>
  <% end %>
   </div>
<% end %>


 </div>
 <div id="form_divider"></div>
 <%= render :partial => "users/profile_form" %>
  </div>
  
  
  
  <div id="overlay_request">
   <h1>Request Leaderboard</h1>
  
 <%= form_tag(request_leaderboard_path, :id => 'form_request' , :class => 'istyle' ) do %>
 <%= text_field_tag "leaderboard_name", "Leaderboard Name" %>
 <%= text_area_tag "leaderboard_description", "Description" %>
 <%= submit_tag "submit", {:class => "button"} %>
 <% end %>
  </div>
  
  
    <div id="overlay_contact">
   <h1>Contact SkillMad</h1>
 <%= form_tag(contact_email_path, :id => 'form_request' , :class => 'istyle') do %>
 <%= text_field_tag "contact_email", "Name/Email" %>
 <%= text_area_tag "contact_message", "Message" %>
 <%= submit_tag "submit", {:class => "button"} %>
 <% end %>
  </div>
  
  


  
 


<%= yield %>



</div>



    
  <%= javascript_include_tag "http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js" %>
  <%= javascript_include_tag "jquery.validate"%>
  <%= javascript_include_tag "validations" %>
   <%= javascript_include_tag "jquery.cookie" %>
<%= javascript_include_tag "customSelect.jquery.min.js" %>
  <%= javascript_include_tag "waypoints.min" %>
  <%= javascript_include_tag "inline"%>
       



</body>

</html>
