<%provide(:title, 'Home') %>

<% @current_video ||= current_video %>

<%if signed_in? %>

     <meta property="og:image" content="http://img.youtube.com/vi/#{@current_video.yt_video_id}/0.jpg"/>
   
    <%= render 'layouts/flash_notices' %>
	

       <%if !@video_list.empty? %>
	
         <div id="video_container">
          <%= render(:partial => "videos/vidplayer", :locals =>{:current_video => @current_video, :bank => @bank}) %>
	 </div>

	 <%= render(:partial => "videos/scroll", :locals => {:video_list => @video_list, :bank => @bank, :myVid => @myVid}) %>		
       
	
	 <%= render 'layouts/leaderboard' %>
	
	 <div id="id_card">
	    <%= render :partial => "users/id_card"%>
 	 </div>
      <%end%>

     <div id="hover_images"> 
	<%= image_tag "/assets/next_hover.gif" %>
	<%= image_tag "/assets/back_hover.gif" %>
	<%= image_tag "/assets/arrow_mad_hover.gif" %>
	<%= image_tag "/assets/arrow_bad_hover.gif" %>
	<%= image_tag "/assets/button_hover.gif" %> 
	<%= image_tag "/assets/share_fb_hover.gif" %> 
	<%= image_tag "/assets/share_twitter_hover.gif" %> 
     </div>


<% else %>

 <%= render 'layouts/lander' %>  

<%end%>


  

