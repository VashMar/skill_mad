 <% if signed_in? %>

<%= form_for(:user, :url => prof_update_path(:id => @user.id), :html => { :id => 'form_info' , :class => 'istyle'},
"data_type" => :js, :remote => true ) do |f| %>

<div id="response"></div>

 <%= f.label :year, "Year" %>
 <%= f.text_field :year %>
 <%= f.label :major, "Major" %>
 <%= f.text_field :major %>
 <%= f.label :skill, "Skill" %>
 <%= f.text_field :skill %>
  <%= f.label :about, "About Me" %>
 <%= f.text_area :about %>
 <%= f.submit "save", :class => "button" %>
 
 <%= link_to("view profile",select_user_path(:user => current_user.id),  :remote => true ) %>
 <% end %>
<% end %>
