module ApplicationHelper
# Returns the full title on a per-page basis.
  def full_title(page_title)
    base_title = "SkillMad"
    if page_title.empty?
      base_title
    else
      "#{base_title} | #{page_title}"
    end
  end

def current_video=(video)
@current_video = video 
end

def current_video
@current_video ||= Video.order("points DESC")[0]
end




end
